{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "no-console": 0,
    "no-unused-vars": 2,
    "indent": 2,
    "linebreak-style": ["error", "unix"],
    "quotes": 2,
    "semi": ["error", "never"]
  }
}
